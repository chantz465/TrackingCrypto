@using TrackingCrypto
@model Wallet

<h2>Add new Wallet</h2>

@using (Html.BeginForm("InsertWalletToDatabase", "Wallet", "Post"))
{   
    

    <input asp-for="WalletID" type="hidden" value="" />

    
    
    
    <label asp-for="CoinName" class="control-label">CoinName</label>
    

    <input type="text" name="CoinName" class="form-control" value="" />
    <label asp-for="CompanyName" class="control-label">CompanyName</label>
    <input type="text" name="CompanyName" class="form-control" />

    <label asp-for="WalletAddress" class="control-label">WalletAddress</label>

    <input type="text" name="WalletAddress" class="form-control" />

   
    
    <input type="submit" value="Create wallet" class="btn btn-primary" />
}